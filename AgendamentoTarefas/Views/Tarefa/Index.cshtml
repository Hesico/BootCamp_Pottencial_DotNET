@model IEnumerable<AgendamentoTarefas.Models.Tarefa>

@{
    ViewData["Title"] = "Tarefas";
}

<h2>Tarefas</h2>

<br>

<form asp-action="Index">
    <div class="form-group">
        <input class="form" placeholder="Valor de Busca" />
        <input type="submit" value="Buscar" class="btn btn-success" />
    </div>
</form>
<br>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></a> 
                    <a asp-action="Index" asp-route-id="@item.Id" class="btn btn-info"><span class="glyphicon glyphicon-th-list"></span></a> 
                    <a asp-action="Deletar" asp-route-id="@item.Id"class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        }
        <form asp-action="Index">
            <td class="form-group">
                <input value="Nova Tarefa" class="form-control" readonly />
            </td>
            <td class="form-group">
                <input name="Titulo" id="Titulo" class="form-control" />
            </td>
            <td class="form-group">
                <input name="Descricao" id="Descricao" class="form-control"  />
            </td>
            <td class="form-group">
                <input type="date" name="Data" id="Data" class="form-control"  />
            </td>
            <td class="form-group">
                <select class="form-select"  name="Status" id="Status" aria-label="Default select example">
                <option selected value="Pendente">Pendente</option>
                <option value="Realizando">Realizando</option>
                <option value="Finalizado">Finalizado</option>
                </select>
            </td>
            <td class="form-group">
                <input type="submit" value="Criar" class="btn btn-success"/>
            </td>
        </form>
    </tbody>
</table>